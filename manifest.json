{
  "manifest_version": 3,
  "name": "视频转文字助手",
  "version": "1.0.0",
  "description": "一键提取视频字幕或通过 AI 实时转录音频为文字。",
  "permissions": [
    "sidePanel",
    "activeTab",
    "downloads",
    "cookies",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtu.be/*",
    "https://*.bilibili.com/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "点击打开视频转文字助手",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self';"
  }
}
